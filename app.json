{
  "name": "Destiny-2-TeamInventory",
  "description": "This app does one little thing, and does it well.",
  "keywords": [
    "productivity",
    "php",
    "Destiny2"
  ],
  "website": "https://github.com/knightofdemons/Destiny-2-TeamInventory",
  "repository": "https://github.com/knightofdemons/Destiny-2-TeamInventory",
  "logo": "https://www.bungie.net/favicon.png",
  "success_url": "/",
  "scripts": {
    "postdeploy": "bundle exec rake bootstrap php"
  },
  "env": {
    "SECRET_TOKEN": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    },
    "WEB_CONCURRENCY": {
      "description": "The number of processes to run.",
      "value": "5"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-1x"
    }
  },
  "image": "heroku/php",
  "addons": [
    "openredis",
    {
      "plan": "mongolab:shared-single-small",
      "as": "MONGO"
    }
  ],
  "buildpacks": [
    {
      "url": "https://elements.heroku.com/buildpacks/heroku/heroku-buildpack-php"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "bundle exec rake test"
      }
    }
  }
}
